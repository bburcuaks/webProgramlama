
@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ekranı";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-10 border-bottom text-center pb-2">@ViewData["Title"]</h1>
        </div>
</div>
 <div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary=ModelOnly class="text-danger small"></div>
            <div class="form-group mb-3">
                <div class="form-group mb-3">
                <label asp-for=Name class="form-label">Ad</label>
                <input asp-for=Name class="form-control" placeholder="bburcuaks" />
                <span asp-validation-for="Name"class="text-danger small"></span>
            </div>
               
            <div class="form-group mb-3">
                <div class="form-group mb-3">
                <label asp-for=Surname class="form-label">Soyad</label>
                <input asp-for=Surname class="form-control" placeholder="bburcuaks" />
                <span asp-validation-for="Surname"class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-group mb-3">
                <label asp-for=Username class="form-label">Kullanıcı Adı</label>
                <input asp-for=Username class="form-control" placeholder="bburcuaks" />
                <span asp-validation-for="Username"class="text-danger small"></span>
            </div>



            <div class="form-group mb-3">
                <label asp-for=Password class="form-label">Şifre</label>
                <input asp-for=Password class="form-control" placeholder="Şifre" />
                 <span asp-validation-for="Password"class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for=RePassword class="form-label">Şifre</label>
                <input asp-for=RePassword class="form-control" placeholder="Şifre" />
                 <span asp-validation-for="RePassword"class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-success d-block">Kayıt Ol</button>
            </div>

        </form>
    </div>
</div>

