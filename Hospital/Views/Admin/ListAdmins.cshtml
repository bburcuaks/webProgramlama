@using Hospital.Entities
@model List<Admin>

<h2>Admin Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Kilit Durumu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Name</td>
                <td>@admin.Surname</td>
                <td>@admin.Username</td>
                <td>@(admin.Locked ? "Kilitli" : "Açık")</td>
                <td>
                    <form asp-action="DeleteAdmins" asp-route-adminId="@admin.AdminId" method="post">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
